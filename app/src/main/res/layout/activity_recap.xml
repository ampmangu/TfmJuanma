<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="150dp"
    android:background="@drawable/background"

    tools:context=".RecapActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_vocabulary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:text="@string/vocabulary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/btn_phrasal"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/red"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        app:strokeWidth="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_phrasal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/phrasal_verbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_vocabulary"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blue"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        app:strokeWidth="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:text="@string/verb_tenses"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_collocations"
        android:backgroundTint="@color/yellow"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        app:strokeWidth="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_collocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/collocations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_tenses"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/green"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        app:strokeWidth="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>